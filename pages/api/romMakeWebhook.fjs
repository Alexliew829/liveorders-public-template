import { cert, getApps, initializeApp } from 'firebase-admin/app';
import { getFirestore } from 'firebase-admin/firestore';

const serviceAccount = JSON.parse(process.env.FIREBASE_ADMIN_KEY);
if (!getApps().length) {
  initializeApp({ credential: cert(serviceAccount) });
}
const db = getFirestore();
const PAGE_ID = process.env.PAGE_ID;

export default async function handler(req, res) {
  if (req.method !== 'POST') return res.status(405).json({ error: 'åªå…è®¸ POST è¯·æ±‚' });

  try {
    const { post_id, comment_id, message, user_id, user_name } = req.body;

    console.log('ğŸ“¥ Webhook æ”¶åˆ°ç•™è¨€å†…å®¹ï¼š', JSON.stringify(req.body, null, 2));

    // âš ï¸ ç¼ºå°‘å¿…è¦å­—æ®µ
    if (!message || !comment_id) {
      return res.status(400).json({ error: 'ç¼ºå°‘ comment_id æˆ– message' });
    }

    // âœ… æ’é™¤ä¸»é¡µè‡ªå·±çš„ç•™è¨€
    if (user_id && user_id === PAGE_ID) {
      return res.status(200).json({ status: 'ignored', reason: 'ä¸»é¡µç•™è¨€' });
    }

    // âœ… å®½å®¹æå– A/B ç¼–å·ï¼ˆå…è®¸å¤§å°å†™æ··åˆã€ç©ºæ ¼ã€å‰å¯¼é›¶ï¼‰
    const match = message.match(/\b([ab])\s*0*([1-9][0-9]{0,2})\b/i);
    if (!match) {
      return res.status(200).json({ status: 'ignored', reason: 'ç•™è¨€ä¸­æ²¡æœ‰æœ‰æ•ˆç¼–å·' });
    }

    const type = match[1].toUpperCase(); // A æˆ– B
    const number = match[2];             // å»é™¤å‰å¯¼é›¶çš„æ•°å­—
    const selling_id = type + number;    // ç»Ÿä¸€æ ¼å¼ï¼Œå¦‚ A32ã€B001

    // ğŸ” æŸ¥è¯¢å•†å“æ˜¯å¦å­˜åœ¨
    const productRef = db.collection('live_products').doc(selling_id);
    const productSnap = await productRef.get();
    if (!productSnap.exists) {
      return res.status(200).json({ status: 'failed', reason: `æ‰¾ä¸åˆ°å•†å“ ${selling_id}` });
    }

    const product = productSnap.data();

    // âœ… Bç±»å•†å“åªæ¥å—ç¬¬ä¸€ä¸ªç•™è¨€è€…
    if (product.type === 'B') {
      const existSnap = await db.collection('triggered_comments')
        .where('selling_id', '==', selling_id)
        .limit(1)
        .get();

      if (!existSnap.empty) {
        return res.status(200).json({ status: 'skipped', reason: 'Bç±»å•†å“å·²æœ‰ç•™è¨€è€…' });
      }
    }

    // âœ… å†™å…¥ triggered_comments
    await db.collection('triggered_comments').doc(comment_id).set({
      comment_id,
      post_id: post_id || '',
      message,
      user_id: user_id || '',
      user_name: user_name || 'åŒ¿åç”¨æˆ·',
      selling_id,
      product_name: product.product_name || '',
      price: product.price || '',
      price_raw: product.price_raw || 0,
      created_at: new Date().toISOString(),
    });

    return res.status(200).json({ status: 'success', selling_id });
  } catch (err) {
    console.error('âŒ å¤„ç†ç•™è¨€å¤±è´¥ï¼š', err);
    return res.status(500).json({ error: 'å†…éƒ¨é”™è¯¯', details: err.message });
  }
}
